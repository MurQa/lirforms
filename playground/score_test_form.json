{
  "schema": {
    "type" : {
      "type" : "integer",
      "default" : 0
    },
    "title" : {
      "type" : "string",
      "title": "Название теста",
      "required": true
    },
    "description" : {
      "type" : "string",
      "title" : "Описание"
    },

    "results" : {
      "type" : "array",
      "items" : {
        "type" : "object",
        "title" : "Результат",
        "properties" : {
          "lower_score_limit" : {
            "title" : "Минимальный балл",
            "type" : "integer",
            "default" : 0
          },
          "upper_score_limit" : {
            "title" : "Максимальный балл",
            "type" : "integer",
            "default" : 0
          },
          "text" : {
            "type" : "string",
            "title" : "Текст",
            "required": true
          }
        }
      }
    },

    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "title": "Вопрос",
        "properties": {
          "type" : {
            "type" : "integer",
            "default" : 0
          },
          "text": {
            "type": "string",
            "title": "Вопрос"
          },

          "options": {
            "type": "array",
            "items": {
                "type" : "object",
                "properties" : {
                  "type" : {
                    "type" : "integer",
                    "default" : 0
                  },
                  "text" : {
                    "type": "string",
                    "title": "Вариант ответа",
                    "required" : true
                  },
                  "score" : {
                    "type" : "integer",
                    "title" : "Баллы",
                    "description" : "Баллы, начисляемые за выбор этого варианта",
                    "required" : true
                  }
                }
              }
          }
        }
      }
    }
  },

  "form": [
    {
      "key": "type",
      "type": "hidden"
    },
    "title",
    {
      "key" : "description",
      "type" : "textarea"
    },

    {
      "title" : "Результаты теста",
      "type" : "tabarray",
      "key" : "results",
      "items" : {
        "legend": "Вариант {{idx}}",
        "type" : "section",
        "items" : [
          "results[].lower_score_limit",
          "results[].upper_score_limit",
          "results[].text"
        ]
      }
    },

    {
      "title" : "Вопросы теста",
      "type" : "tabarray",
      "key" : "questions",
      "items" : {
        "legend": "{{idx}}. {{value.substring(0,20)}}",
        "type" : "section",
        "items" : [
          {
            "key" : "questions[].type",
            "type" : "hidden"
          },
          {
            "key" : "questions[].text",
            "title": "Вопрос {{idx}}",
            "valueInLegend": true
          },
          {
            "type": "array",
            "items": [
              {
                "type" : "section",
                "items" : [
                  {
                    "key" : "questions[].options[].type",
                    "type" : "hidden"
                  },
                  {
                    "type" : "fieldset",
                    "items" : [
                      "questions[].options[].text",
                      "questions[].options[].score"
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "type": "submit",
      "title": "Показать результат"
    }
  ]
}
